<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_f6"
    android:gravity="center"
    android:orientation="vertical">


    <com.github.customview.MyTextView
        android:id="@+id/tv_dateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="2017-08-25  25:25"
        android:textColor="#fffefe"
        android:textSize="10sp"
        app:my_tv_corner_radius="5dp"
        app:my_tv_solid="#c9c9c9" />

    <com.github.customview.MyLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="15dp"
        app:my_ll_corner_radius="8dp"
        app:my_ll_solid="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="淘宝衣服商户号郭德纲尴尬的啦啦啦啦多来来来"
            android:textColor="@color/c_2c2c2c"
            android:id="@+id/tv_Title"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">



            <com.github.customview.MyCheckBox
                android:id="@+id/CheckBox_defeult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:padding="5dp"
                android:visibility="gone"
                app:my_checkbox_checked="@mipmap/img78"
                app:my_checkbox_checked_drawable="left"
                app:my_checkbox_normal="@mipmap/img79" />

            <ImageView
                android:id="@+id/iv_collect_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/icon" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_Remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="淘宝衣服商户号郭德纲尴尬的啦啦啦啦多来来来"
                    android:textColor="@color/c_2c2c2c"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tv_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="发布时间：2017-02-30"
                    android:textColor="@color/gray_89"
                    android:visibility="gone"
                    android:textSize="10sp" />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/tv_Qiuhuodi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="求货地：大返|日本"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/gray_89"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可爱猫咪"
                            android:layout_marginTop="8dp"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/gray_89"
                            android:textSize="11sp" />

                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </com.github.customview.MyLinearLayout>


    <com.github.customview.MyLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone"
        app:my_ll_corner_radius="3dp"
        app:my_ll_solid="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="淘宝衣服商户号郭德纲尴尬的啦啦啦啦多来来来淘宝衣服商户号郭德纲尴尬的啦啦啦啦多来来来"
            android:textColor="@color/c_2c2c2c"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/icon" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="3.5dp"
                android:padding="5dp"
                android:text="淘宝衣服商户号郭德纲尴尬的啦啦啦啦多来来来淘宝衣服商户号郭德纲尴尬的啦啦啦啦多来来来淘宝衣服商户号郭德纲尴尬的啦啦啦啦多来来来淘宝衣服商户号郭德纲尴尬的啦啦啦啦多来来来"
                android:textColor="@color/gray_89"
                android:textSize="10sp" />


        </LinearLayout>


    </com.github.customview.MyLinearLayout>
</LinearLayout>