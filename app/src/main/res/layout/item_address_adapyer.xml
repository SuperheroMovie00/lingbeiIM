<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/Tv_AddressName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="魏巍"
                android:textColor="@color/c_2c2c2c"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/Tv_AddressPhone"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:gravity="center|right"
                android:text="13235488470"
                android:textSize="13sp"
                android:textColor="@color/c_2c2c2c" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/e" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/Tv_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="普陀区澳门路777号"
                android:textColor="@color/c_2c2c2c"
                android:textSize="13sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/e" />



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">



                <com.github.customview.MyCheckBox
                    android:id="@+id/CheckBox_defeult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="默认"
                    android:drawablePadding="8dp"
                    android:textColor="@color/c_2c2c2c"
                    android:textSize="13sp"
                    app:my_checkbox_checked="@mipmap/img78"
                    app:my_checkbox_checked_drawable="left"
                    app:my_checkbox_normal="@mipmap/img79" />

            <TextView
                android:layout_width="0dp"
                android:id="@+id/Tv_Address_Edit"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/img10"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="编辑"
                android:textColor="@color/c_2c2c2c"
                android:textSize="13sp" />

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/Tv_Address_Delete"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:drawableLeft="@mipmap/img10"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="删除"
                android:textColor="@color/c_2c2c2c"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/e" />
</LinearLayout>
