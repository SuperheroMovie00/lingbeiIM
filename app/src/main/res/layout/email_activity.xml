<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_f6"
    android:orientation="vertical">


    <com.vondear.rxtools.view.RxTitle
        android:id="@+id/rx_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_ff_77"
        app:leftIcon="@mipmap/img81"
        app:title="绑定邮箱"
        app:titleColor="@color/white"></com.vondear.rxtools.view.RxTitle>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <com.github.customview.MyEditText
                android:id="@+id/ed_mess"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:hint="邮箱"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:textColor="@color/c_2c2c2c"
                app:my_et_border_color="@color/gray_d7"
                app:my_et_border_width="0.5dp"
                app:my_et_corner_radius="1dp"
                app:my_et_solid="@color/white" />


                <com.github.customview.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:my_ll_border_color="@color/gray_d7"
                    app:my_ll_border_width="0.5dp"
                    app:my_ll_corner_radius="1dp"
                    app:my_ll_solid="@color/white">

                        <EditText
                            android:id="@+id/ed_code"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="50dp"
                            android:paddingLeft="10dp"
                            android:background="@null"
                            android:inputType="number"
                            android:hint="验证码"
                            android:gravity="center|left"
                            android:textColor="@color/c_2c2c2c"
                            android:textSize="14sp" />


                        <com.github.customview.MyTextView
                            android:id="@+id/tv_get_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:padding="9dp"
                            android:text="获取验证码"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/black_ff_7f"
                            android:textSize="14sp"
                            android:layout_marginRight="15dp"
                            app:my_tv_border_color="@color/gray_d7"
                            app:my_tv_border_width="0.5dp"
                            app:my_tv_corner_radius="15dp"
                            app:my_tv_solid="@color/white" />



                </com.github.customview.MyLinearLayout>

            <com.github.customview.MyTextView
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:my_tv_solid="@color/red_ff_77"
                app:my_tv_corner_radius="3dp"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="确认"
                android:textSize="14sp"
                android:textColor="@color/white"
                />
            </LinearLayout>




</LinearLayout>
