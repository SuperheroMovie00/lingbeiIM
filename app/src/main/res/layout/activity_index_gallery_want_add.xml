<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="5dp">


        <com.github.customview.MyEditText
            android:id="@+id/tv_QiDingID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center"
            android:hint="求购数量"
            android:padding="8dp"
            android:text="0"
            android:textColor="@color/c_2c2c2c"
            android:textColorHint="@color/c_bfbfbf"
            android:textSize="11sp" />
        <com.github.customview.MyEditText
            android:id="@+id/tv_QiDingNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="求购数量"
            android:padding="8dp"
            android:textColor="@color/c_2c2c2c"
            android:textColorHint="@color/c_bfbfbf"
            android:textSize="11sp" />


        <View
            android:layout_width="0.3dp"
            android:layout_height="fill_parent"
            android:background="#d7d7d7"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />


        <com.github.customview.MyEditText
            android:id="@+id/tv_QiDingPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="求购价格"
            android:padding="8dp"
            android:textColor="@color/c_2c2c2c"
            android:textColorHint="@color/c_bfbfbf"
            android:textSize="11sp" />


    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.20dp"
        android:background="@color/gray_d7" />
</LinearLayout>
