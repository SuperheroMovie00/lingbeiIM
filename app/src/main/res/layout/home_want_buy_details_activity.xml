                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1.5"
                android:padding="8dp"
                android:text="秋冬男士秋冬男士情侣外套韩版加绒加厚青少年圆领套头卫衣秋装男潮打底衫秋冬男士情侣外套韩版加绒加厚青少年圆领套头卫衣秋装男潮打底衫秋冬男士情侣外套韩版加绒加厚青少年圆领套头卫衣秋装男潮打底衫秋冬男士情侣外套韩版加绒加厚青少年圆领套头卫衣秋装男潮打底衫情侣外套韩版加绒加厚青少年圆领套头卫衣秋装男潮打底衫【包邮】"
                android:textColor="@color/colorText"
                android:textSize="13sp" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@color/c_F8F8F8"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_Open"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:padding="10dp"

                    android:src="@mipmap/img67" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="6dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/red_ff_77"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:text="详细信息"
                    android:textColor="@color/c_2c2c2c"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <com.github.customview.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    app:my_ll_corner_radius="4dp"
                    app:my_ll_solid="@color/gray_f6">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="品牌"
                        android:textColor="@color/gray_89"
                        android:textSize="11sp" />


                    <TextView
                        android:id="@+id/tv_Brand"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center|left"
                        android:text="炫迈口香糖"
                        android:textColor="@color/c_2c2c2c"
                        android:textSize="10sp" />


                </com.github.customview.MyLinearLayout>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#d7d7d7" />


                <com.github.customview.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
