<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_f6"
    android:orientation="vertical">

    <com.github.customview.MyLinearLayout
        android:id="@+id/ll_Change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:my_ll_corner_radius="3dp"
        app:my_ll_solid="@color/white">

        <com.github.customview.MyCheckBox
            android:id="@+id/CheckBox_defeult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:visibility="gone"
            app:my_checkbox_checked="@mipmap/img78"
            app:my_checkbox_checked_drawable="left"
            app:my_checkbox_normal="@mipmap/img79" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_person_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:text="福建的厦门市古拉昂与"
                    android:textColor="@color/c_2c2c2c"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:text="09:90"
                    android:textColor="@color/gray_89"
                    android:textSize="13sp" />
            </RelativeLayout>



        </LinearLayout>


            <com.github.customview.MyTextView
                android:id="@+id/tv_Remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="立即沟通"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:my_tv_border_color="@color/red_ff_8a"
                app:my_tv_border_width="0.5dp"
                app:my_tv_corner_radius="10dp"
                app:my_tv_solid="@color/red_ff_77" />

        </RelativeLayout>


    </com.github.customview.MyLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color_9" />
</LinearLayout>