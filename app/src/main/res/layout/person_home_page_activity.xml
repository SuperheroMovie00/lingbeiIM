<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_f6"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_ff_77"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_back_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:src="@mipmap/img81"
            android:textColor="@color/white" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_home"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:background="@mipmap/img91"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_person_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/img32" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_person_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="张三"

                        android:textColor="@color/c_2c2c2c"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_YijingRenzheng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="已认证"
                        android:layout_marginLeft="15dp"
                        android:drawablePadding="2dp"
                        android:visibility="gone"
                        android:drawableLeft="@mipmap/renzheng"
                        android:textColor="@color/red_ff_77"
                        android:textSize="11sp" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#d7d7d7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <LinearLayout
                    android:id="@+id/ll_person_collection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/img46"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="上海海淘信息科技有限公司"
                        android:textColor="@color/c_2c2c2c"
                        android:textSize="11sp" />


                </LinearLayout>

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="fill_parent"
                    android:background="#d7d7d7"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

                <LinearLayout
                    android:id="@+id/ll_person_follow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_Addrsss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/img47"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="常住地：日本"
                        android:textColor="@color/c_2c2c2c"
                        android:textSize="11sp" />


                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f6bfb3" />


            <com.github.customview.MyLinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <RadioGroup

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    app:my_ll_bottom_line="true"
                    app:my_ll_solid="@color/white">

                    <com.github.customview.MyRadioButton
                        android:id="@+id/cb_replace_sort"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="true"
                        android:ems="5"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="货源"
                        android:textSize="11sp"
                        app:my_radio_checked_color="@color/red_ff_77"
                        app:my_radio_checked_drawable="left"
                        app:my_radio_normal_color="@color/c_2c2c2c" />


                    <View
                        android:layout_width="0.3dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:background="#d7d7d7" />

                    <com.github.customview.MyRadioButton
                        android:id="@+id/cb_replace_hot"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:ems="5"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="求购"
                        android:textSize="11sp"
                        app:my_radio_checked_color="@color/red_ff_77"
                        app:my_radio_checked_drawable="left"
                        app:my_radio_normal_color="@color/c_2c2c2c" />


                </RadioGroup>

                <in.srain.cube.views.ptr.PtrClassicFrameLayout xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/pcfl_refresh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    cube_ptr:ptr_keep_header_when_refresh="true"
                    cube_ptr:ptr_pull_to_fresh="false"
                    cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
                    cube_ptr:ptr_resistance="1.7">


                </in.srain.cube.views.ptr.PtrClassicFrameLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_Person"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent">

                </android.support.v7.widget.RecyclerView>
            </com.github.customview.MyLinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>