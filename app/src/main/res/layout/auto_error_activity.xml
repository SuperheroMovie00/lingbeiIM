<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.vondear.rxtools.view.RxTitle
        android:id="@+id/rx_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_ff_8a"
        app:leftIcon="@mipmap/img81"
        app:leftIconVisibility="true"
        app:leftTextColor="@color/blue_58"
        app:title="个人认证"
        app:titleColor="@color/white"></com.vondear.rxtools.view.RxTitle>


    <com.github.customview.MyLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_IDCardOne"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/img95" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="认证失败！"
            android:textColor="@color/c_2c2c2c"
            android:textSize="15sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="你的身份信息与姓名不匹配，请重新认证"
            android:textColor="@color/gray_66"
            android:textSize="11sp" />


        <com.github.customview.MyTextView
            android:id="@+id/tv_Again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="重新认证"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:my_tv_border_color="@color/red_ff_8a"
            app:my_tv_border_width="0.5dp"
            app:my_tv_corner_radius="20dp"
            app:my_tv_solid="@color/red_ff_77" />

        <com.github.customview.MyTextView
            android:id="@+id/tv_BackIndex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="返回首页"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            app:my_tv_border_color="@color/black"
            app:my_tv_border_width="0.5dp"
            app:my_tv_corner_radius="20dp" />
    </com.github.customview.MyLinearLayout>

</LinearLayout>
